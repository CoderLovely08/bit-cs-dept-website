<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Welcome to BIT - Computer Science Enginnering Department</title>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />
    <link rel="stylesheet" href="../css/bootstrap.css" />
    <link rel="stylesheet" href="../css/styles.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/tailwindcss-cdn@3.4.1/tailwindcss.js"></script>

    <style>
      html {
        scroll-behavior: smooth;
      }
    </style>
  </head>

  <body>
    <header class="bg-blue-500 shadow-md py-2">
      <nav class="container mx-auto">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="flex justify-between items-center gap-2">
            <a href="/"
              ><img
                src="../images/bit-logo.png"
                alt=""
                class="h-16 w-auto bg-white rounded-full"
            /></a>
            <h1
              class="text-white text-2xl max-md:text-xl max-sm:text-md font-bold text-center"
            >
              Department of Computer Engineering
            </h1>
            <button
              id="menu-toggle"
              class="md:hidden text-white focus:outline-none"
            >
              <i class="fa fa-bars"></i>
            </button>
          </div>
          <ul
            id="menu"
            class="max-md:hidden flex flex-col md:flex-row items-center h-0 duration-300"
          >
            <li class="mx-2">
              <a href="/" class="text-white hover:bg-blue-700 px-3 py-2 rounded"
                >HOME</a
              >
            </li>
            <li class="mx-2 group relative">
              <a
                href="/page/about"
                class="text-white hover:bg-blue-700 px-3 py-2 rounded"
                >ABOUT US</a
              >
              <ul class="absolute hidden group-hover:block bg-blue-500 rounded">
                <li>
                  <a
                    href="/page/gallery"
                    class="block px-4 py-2 text-white hover:bg-blue-700"
                    >Photo Gallery</a
                  >
                </li>
                <!-- Additional submenu items can be added here -->
              </ul>
            </li>
            <li class="mx-2">
              <a
                href="/page/department"
                class="text-white hover:bg-blue-700 px-3 py-2 rounded"
                >DEPARTMENT</a
              >
            </li>
            <li class="mx-2">
              <a
                href="/page/curriculum"
                class="text-white hover:bg-blue-700 px-3 py-2 rounded"
                >CURRICULUM</a
              >
            </li>
            <li class="mx-2">
              <a
                href="/page/examination"
                class="text-white hover:bg-blue-700 px-3 py-2 rounded"
                >EXAMINATION</a
              >
            </li>
            <li class="mx-2">
              <% if (locals?.name) { %>
              <a
                id="logout-btn"
                href="#"
                class="text-white hover:bg-blue-700 px-3 py-2 rounded"
                >Logout</a
              >
              <% } else { %>
              <a
                href="/page/login"
                class="text-white hover:bg-blue-700 px-3 py-2 rounded"
                >Login</a
              >
              <% } %>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <!-- Backdrop and Loading Indicator -->
    <div
      id="loadingIndicator"
      class="fixed top-0 left-0 right-0 bottom-0 bg-black bg-opacity-50 flex justify-center items-center z-50 hidden"
    >
      <div
        class="spinner-border animate-spin inline-block w-8 h-8 border-4 rounded-full text-white"
        role="status"
      ></div>
    </div>
    <script>
      $(document).ready(function () {
        $("#menu-toggle").click(function () {
          $("#menu").toggleClass("max-md:hidden");
          $("#menu").toggleClass("h-0");
        });

        // Logout button
        $("#logout-btn").on("click", function () {
          let confirmOption = confirm("Are you sure to logout?");
          if (!confirmOption) return;

          $.ajax({
            type: "POST",
            url: "/auth/logout",
            success: function (response) {
              if (response.success) alert(response.message);
              window.location.href = "/";
            },
            error: function (error) {
              alert(error);
            },
          });
        });
      });
    </script>
  </body>
</html>
