<%- include('../partials/header') %>

    <main class="flex justify-center items-center w-full h-fit">
        <div class="w-1/2 max-md:w-full m-4 bg-white p-8 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold text-center mb-6">Student Registration</h2>
            <form id="register-form" method="POST">
                <div class="flex max-md:flex-col justify-between items-center gap-2">
                    <div class="mb-4 w-full">
                        <label for="fullName" class="block text-gray-700 font-semibold mb-2">Full Name</label>
                        <input type="text" id="fullName" name="fullName"
                            class="border border-gray-300 rounded-md px-3 py-2 w-full focus:outline-none focus:border-blue-500"
                            placeholder="Enter your full name" required />
                    </div>
                    <div class="mb-4 w-full">
                        <label for="semester" class="block text-gray-700 font-semibold mb-2">Semester</label>
                        <select id="semester" name="semester"
                            class="border border-gray-300 rounded-md px-3 py-2 w-full focus:outline-none focus:border-blue-500" required>
                            <option value="" disabled selected hidden>
                                Select your semester
                            </option>
                            <!-- Add options for semesters -->
                            <% for( let i=0; i < dropdownOptions.semesterData.data.length; i++ ) { %>
                                <option value="<%= dropdownOptions.semesterData.data[i].semester_id %>">
                                    <%= dropdownOptions.semesterData.data[i].semester_name %>
                                </option>
                                <% } %>
                        </select>
                    </div>
                </div>
                <div class="flex max-md:flex-col justify-between items-center gap-2">
                    <div class="mb-4 w-full">
                        <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
                        <input type="email" id="email" name="email"
                            class="border border-gray-300 rounded-md px-3 py-2 w-full focus:outline-none focus:border-blue-500"
                            placeholder="Enter your email" required />
                    </div>
                    <div class="mb-4 w-full">
                        <label for="password" class="block text-gray-700 font-semibold mb-2">Password</label>
                        <input type="password" id="password" name="password"
                            class="border border-gray-300 rounded-md px-3 py-2 w-full focus:outline-none focus:border-blue-500"
                            placeholder="Enter your password" required />
                    </div>
                </div>
                <button id="register-btn" type="submit"
                    class="bg-blue-500 text-white font-semibold py-2 px-4 rounded-md w-full hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                    Register
                </button>
            </form>
            <p class="text-gray-600 text-center mt-4">
                Already have an account?
                <a href="/page/login" class="text-blue-500 hover:text-blue-500 font-bold underline">Login</a>
            </p>
        </div>
    </main>

    <script>
        $(document).ready(function () {
            $("#register-form").on("submit", function (event) {
                event.preventDefault();

                const fullName = $("#fullName").val().trim();
                const email = $("#email").val().trim();
                const password = $("#password").val().trim();
                const semesterId = $("#semester").val();

                let confirmOption = confirm("Are you sure to register?");
                if (!confirmOption) return;

                $.ajax({
                    type: "POST",
                    url: "/auth/student/register",
                    data: {
                        fullName,
                        email,
                        password,
                        semesterId,
                    },
                    beforeSend: function () {
                        $("#register-btn").text("Loading...");
                        $("#register-btn").removeClass("bg-blue-500");
                        $("#register-btn").addClass("bg-gray-600");
                        $("#register-btn").prop("disabled", true);
                    },
                    success: function (resposne) {
                        if (resposne.success) {
                            alert(resposne.message);
                            window.location.href = "/page/login";
                        } else {
                            alert(resposne.message);
                        }
                    },
                    complete: function (status) {
                        $("#register-btn").text("Register");
                        $("#register-btn").removeClass("bg-gray-600");
                        $("#register-btn").addClass("bg-blue-500");
                        $("#register-btn").prop("disabled", false);
                    },
                    error: function (xhr, status, error) {
                        // If there's an error with the request, handle the error response
                        if (xhr.status === 400 || xhr.status === 401) {
                            // Parse the error response JSON to get the message
                            var errorMessage = JSON.parse(xhr.responseText).message;
                            alert(errorMessage);
                        } else {
                            // For other errors, log the error to the console
                            console.log(error);
                        }
                    },
                });
            });

            // Function to enable loading
            function enableLoading() {
                $('#loadingIndicator').removeClass('hidden');
            }

            // Function to disable loading
            function disableLoading() {
                $('#loadingIndicator').addClass('hidden');
            }

            // Global AJAX complete handler
            $(document).ajaxStart(function () {
                enableLoading();
            });

            // Global AJAX complete handler
            $(document).ajaxComplete(function () {
                disableLoading();
            });
        });
    </script>

    <%- include('../partials/footer') %>