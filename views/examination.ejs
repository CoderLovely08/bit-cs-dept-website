<%- include('partials/header') %>
<main class="container mx-auto px-4 py-8">
  <div class="border bg-white shadow-md mb-8">
    <div class="container mx-auto px-4 py-4">
      <nav class="text-blue-500">
        <strong>On this page:</strong>
        <ol class="ml-3">
          <li>
            <a href="#end-semester" class="hover:text-blue-700"
              >1. End Semester Question Papers
            </a>
          </li>
          <li>
            <a href="#model-answers" class="hover:text-blue-700"
              >2. Model Answer Papers</a
            >
          </li>
          <li>
            <a href="#sessional-papers" class="hover:text-blue-700"
              >3. Sessional Papers</a
            >
          </li>
        </ol>
      </nav>
    </div>
  </div>
  <section id="end-semester" class="mb-12 shadow px-4 py-6 rounded-lg border">
    <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-4">
      <h2 class="text-3xl font-bold text-blue-500">
        End Semester Question Papers
      </h2>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <!-- Repeat for each end-semester paper -->

      <!-- Loop through each semester in the grouped data -->
      <% groupedQuestionData.forEach((subjects, semesterId)=> { %>
      <div
        class="bg-white rounded-lg shadow p-4 hover:shadow-lg transition-shadow"
      >
        <!-- Display semester name -->
        <h3 class="text-xl font-bold text-gray-800">
          Semester <%= semesterId %>
        </h3>

        <!-- Loop through each subject in the semester -->
        <ol class="ml-4">
          <% Object.values(subjects).forEach(subject=> { %>
          <!-- Display subject name -->
          <li class="font-medium text-gray-800">
            - <%= subject.subjectName %> (<%= subject.subjectCode %>)
          </li>

          <!-- Loop through each paper in the subject -->
          <ul class="ml-4">
            <% subject.papers.forEach(paper=> { %>
            <!-- Display paper title and download link -->
            <li class="text-gray-600 my-1">
              - <%= paper.paperTitle %>
              <a
                href="<%= paper.pdfLink %>"
                class="inline-block bg-blue-500 text-white text-sm px-2 py-1 rounded hover:bg-blue-600 ml-2"
                >Download Paper</a
              >
            </li>
            <% }) %>
          </ul>
          <% }) %>
        </ol>
      </div>
      <% }) %>
    </div>
  </section>

  <section id="model-answers" class="mb-12 shadow px-4 py-6 rounded-lg border">
    <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-4">
      <h2 class="text-3xl font-bold text-blue-500">Model Answer Papers</h2>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <!-- Repeat for each model answer paper -->
      <!-- Loop through each semester in the grouped data -->
      <% groupedModelData.forEach((subjects, semesterId)=> { %>
        <div class="bg-white rounded-lg shadow p-4 hover:shadow-lg transition-shadow">
          <!-- Display semester name -->
          <h3 class="text-xl font-bold text-gray-800">
            Semester <%= semesterId %>
          </h3>
      
          <!-- Loop through each subject in the semester -->
          <ol class="ml-4">
            <% Object.values(subjects).forEach(subject=> { %>
              <!-- Display subject name -->
              <li class="font-medium text-gray-800">
                - <%= subject.subjectName %> (<%= subject.subjectCode %>)
              </li>
      
              <!-- Loop through each paper in the subject -->
              <ul class="ml-4">
                <% subject.papers.forEach(paper=> { %>
                  <!-- Display paper title and download link -->
                  <li class="text-gray-600 my-1">
                    - <%= paper.paperTitle %>
                      <a href="<%= paper.pdfLink %>"
                        class="inline-block bg-blue-500 text-white text-sm px-2 py-1 rounded hover:bg-blue-600 ml-2">Download
                        Paper</a>
                  </li>
                  <% }) %>
              </ul>
              <% }) %>
          </ol>
        </div>
        <% }) %>
    </div>
  </section>

  <section
    id="sessional-papers"
    class="mb-12 shadow px-4 py-6 rounded-lg border"
  >
    <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-4">
      <h2 class="text-3xl font-bold text-blue-500">Sessional Papers</h2>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <!-- Repeat for each sessional paper -->
      <!-- Loop through each semester in the grouped data -->
      <% groupedSessionalData.forEach((subjects, semesterId)=> { %>
        <div class="bg-white rounded-lg shadow p-4 hover:shadow-lg transition-shadow">
          <!-- Display semester name -->
          <h3 class="text-xl font-bold text-gray-800">
            Semester <%= semesterId %>
          </h3>
      
          <!-- Loop through each subject in the semester -->
          <ol class="ml-4">
            <% Object.values(subjects).forEach(subject=> { %>
              <!-- Display subject name -->
              <li class="font-medium text-gray-800">
                - <%= subject.subjectName %> (<%= subject.subjectCode %>)
              </li>
      
              <!-- Loop through each paper in the subject -->
              <ul class="ml-4">
                <% subject.papers.forEach(paper=> { %>
                  <!-- Display paper title and download link -->
                  <li class="text-gray-600 my-1">
                    - <%= paper.paperTitle %>
                      <a href="<%= paper.pdfLink %>"
                        class="inline-block bg-blue-500 text-white text-sm px-2 py-1 rounded hover:bg-blue-600 ml-2">Download
                        Paper</a>
                  </li>
                  <% }) %>
              </ul>
              <% }) %>
          </ol>
        </div>
        <% }) %>
    </div>
  </section>
</main>
<%- include('partials/footer') %>
