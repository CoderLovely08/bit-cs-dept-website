<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Welcome to BIT - Computer Science Enginnering Department</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet"
        href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="../css/bootstrap.css">
    <link rel="stylesheet" href="../css/styles.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        html {
            scroll-behavior: smooth;
        }
    </style>
</head>

<body>
    <header class="bg-blue-500 shadow-md py-2">
        <nav class="container mx-auto">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="flex justify-between items-center gap-2">
                    <img src="../images/bit-logo.png" alt="" class="h-16 w-auto bg-white rounded-full">
                    <h1 class="text-white text-2xl max-md:text-xl max-sm:text-md font-bold text-center">Department of
                        Computer Engineering</h1>
                    <button id="menu-toggle" class="md:hidden text-white focus:outline-none">
                        <i class="fa fa-bars"></i>
                    </button>
                </div>
                <ul class="hidden md:flex flex-col md:flex-row items-center">
                    <li class="mx-2"><a id="logout-btn" href="#" class="bg-white text-blue-500 hover:bg-gray-900 px-3 py-2 rounded">Logout</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <script>
        $(document).ready(function() {
            // Logout button
            $("#logout-btn").on("click", function () {
                let confirmOption = confirm("Are you sure to logout?");
                if (!confirmOption) return;

                $.ajax({
                    type: "POST",
                    url: "/auth/admin/logout",
                    success: function (response) {
                        if (response.success) alert(response.message);
                        window.location.href = "/";
                    },
                    error: function (error) {
                        alert(error);
                    },
                });
            });
        })
    </script>